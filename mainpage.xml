<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/as"

    >


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:text=" Save the Expenditure(s)"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@android:color/black" />

        <EditText
            android:id="@+id/as"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/message"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginTop="38dp" />

        <!-- <Button
            android:id="@+id/datebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="76dp"
            android:text="SELECT DATE"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="13dp"
            android:padding="15dp"
            android:textStyle="bold" />-->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/as"
            android:layout_below="@+id/view"

            android:layout_marginTop="15dp"
            android:text=" * Amount spent on ?"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/as"
            android:layout_marginTop="37dp"
            android:text="* How much did you spend?"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="29dp"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/save"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_login"
            android:layout_marginTop="27dp"
            android:allowUndo="true"
            android:clickable="?attr/isLightTheme"
            android:ellipsize="start"
            android:onClick="view"
            android:padding="15dp"
            android:text="Save"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_below="@+id/sa"
            android:layout_alignStart="@+id/sa"
            android:layout_marginStart="29dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Clear"
            android:background="@drawable/background_login"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_above="@+id/pse"
            android:layout_alignEnd="@+id/sa"
            android:layout_marginEnd="15dp" />

        <Button
            android:id="@+id/pse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:padding="15dp"
            android:gravity="center_horizontal"
            android:background="@drawable/background_login"
            android:text="Previous Expenditures"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="15dp"
            android:textStyle="bold"
            android:onClick="displayexps"
            android:layout_below="@+id/save"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@android:color/black"
        android:layout_below="@id/rl"/>
</LinearLayout>