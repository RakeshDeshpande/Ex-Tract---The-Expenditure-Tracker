<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/as"


    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Hello there!                                            Secure your data by Signing up!"
        android:gravity="clip_horizontal"
        android:layout_marginLeft="45dp"
        android:textSize="20dp"
        android:textStyle="bold|italic|normal"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instructionssignup"
        android:text="* Empty input or space(s) are not allowed"
        android:textStyle="italic|normal"
        android:layout_marginLeft="30dp"
        android:lines="@android:integer/config_shortAnimTime"


        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/usersignup"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:drawablePadding="9dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:layout_marginBottom="10dp"
        android:hint="Username"
        android:textStyle="normal"
        android:selectAllOnFocus="true"
        android:textColorHint="#3c261f"
        android:layout_above="@+id/passwordsignup"
        android:layout_alignStart="@+id/passwordsignup" />

    <EditText
        android:id="@+id/passwordsignup"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textStyle="normal"
        android:hint="Password"
        android:selectAllOnFocus="true"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="9dp"
        android:textColorHint="#3c261f"
        android:layout_alignBottom="@+id/againpasswordsignup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp" />

    <EditText
        android:id="@+id/againpasswordsignup"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="Re - enter Password"
        android:drawablePadding="9dp"
        android:selectAllOnFocus="true"
        android:textColorHint="#3c261f"
        android:textStyle="normal"
        android:layout_above="@+id/signupbutton"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:layout_alignStart="@+id/passwordsignup"
        android:layout_marginBottom="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="normal|bold"
        android:id="@+id/signupbutton"
        android:gravity="center"

        android:textSize="15dp"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
        android:background="@drawable/background_login"
        android:layout_marginBottom="43dp"
        android:layout_marginStart="115dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView" />







</RelativeLayout>